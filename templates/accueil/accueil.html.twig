{% extends 'base.html.twig' %}

{% block body %}
    <div class="accueil-view">
        {#  Bouton Créer un Quizz si le user à le role PROF #}
        {% if ('ROLE_PROF' in app.user.roles) %}
            <div>
                <a href="{{ path('app_dev_quiz_create') }}">
                    <button class="create-comment-button button">
                        Créer un Quiz
                    </button>
                </a>
                <br/>
                <br/>
                <a href="/quiz/clos">
                    <button>
                        Quiz terminés
                    </button>
                </a>
            </div>
            <br/>
        {% endif %}

        {# Bouton Logout#}
        <a href="{{ path('app_logout') }}">
            <button class="create-comment-button button">
                Se déconnecter
            </button>
        </a>

        <div class="accueil-block-ticket">
            <div class="accueil-def-ticket">Titre</div>
            <div class="accueil-def-ticket">Status</div>
            <div class="accueil-def-ticket accueil-description">Date début</div>
            <div class="accueil-def-ticket accueil-gravite">Date Fin</div>

        </div>


        <div class="all-tickets-container">
            {% for quiz in quizs %}

                {% if  date() > date(quiz.datedebut) and date() < date(quiz.datefin)  %}

                    <div class="accueil-block-ticket" >
                        <a href="{{path('app_copie_create', {'id': quiz.id }) }}">
                            <div class="accueil-contenu-ticket accueil-titre">
                                {{ quiz.nom }}
                            </div>
                            <div class="accueil-contenu-ticket accueil-description">
                                {{ quiz.status }}
                            </div>
                            <div class="accueil-contenu-ticket accueil-description">
                                {{ quiz.dateDebut | date('d M Y') }}
                            </div>
                            <div class="accueil-contenu-ticket accueil-description">
                                {{ quiz.dateFin | date('d M Y') }}
                            </div>
                        </a>
                    </div>
                {% endif %}

            {% endfor %}
        </div>
    </div>
{% endblock %}